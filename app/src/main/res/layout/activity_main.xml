<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bg_relative">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="60dp"
            android:layout_marginStart="20dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_account"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_baseline_account_circle_24" />
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginStart="1dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ic_exit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_exit_to_app_24" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginStart="1dp"/>
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/lin_img"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:padding="5dp"
        android:layout_marginTop="185dp">
        <ImageView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:src="@drawable/car_repair"/>
        <ImageView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:src="@drawable/car_repair"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lin_img"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_service"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_baseline_build_black_24"
            android:background="@drawable/bg_img_service"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_service"
            android:text="Daftar Service"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_monitoring"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_toEndOf="@id/img_service"
            android:src="@drawable/ic_baseline_car_repair_24"
            android:background="@drawable/bg_img_service"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_below="@+id/img_monitoring"
            android:text="Monitoring Service"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_pemberitahuan"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/img_service"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_car_alert_24"
            android:background="@drawable/bg_img_service"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_pemberitahuan"
            android:text="Informasi Service"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/img_report"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/img_monitoring"
            android:layout_toEndOf="@+id/img_pemberitahuan"
            android:layout_marginTop="40dp"
            android:layout_marginStart="50dp"
            android:src="@drawable/ic_baseline_feed_24"
            android:background="@drawable/bg_img_service"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_below="@+id/img_report"
            android:text="Laporan Service"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold"/>


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="730dp"
        android:layout_marginStart="150dp"
        android:text="Advisor Service"
        android:textStyle="bold"/>

</RelativeLayout>